<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:context=".Activity.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <Button
            android:id="@+id/button_start_stream"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="@string/btn_start_stream"/>

        <Button
            android:id="@+id/button_start_upload"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/button_start_stream"
            android:layout_centerHorizontal="true"
            android:text="@string/btn_start_upload"/>

        <Button
            android:id="@+id/button_stop_stream"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/button_start_upload"
            android:layout_centerHorizontal="true"
            android:text="@string/btn_stop_stream"/>

        <TextView
            android:id="@+id/textview_log"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/button_stop_stream"/>

    </RelativeLayout>

</ScrollView>